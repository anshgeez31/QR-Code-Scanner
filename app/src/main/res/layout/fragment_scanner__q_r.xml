<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:backgroundTint="@color/orange"
    android:background="@color/colorTranslucent"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Scanner.Scanner_QRFragment">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/flashSwitch"
        android:layout_width="39dp"
        android:layout_height="22dp"
        android:layout_marginTop="16dp"
        android:background="@drawable/flash_backgroundselector"
        android:src="@drawable/selector_switch"
        app:layout_constraintBottom_toTopOf="@+id/CamScanner"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <FrameLayout
        android:id="@+id/CamScanner"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/flashSwitch"/>

</androidx.constraintlayout.widget.ConstraintLayout>